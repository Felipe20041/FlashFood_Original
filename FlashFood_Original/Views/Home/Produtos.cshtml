            }

            .close {
                color: #aaa;
                float: right;
                font-size: 28px;
                font-weight: bold;
                cursor: pointer;
            }

            .btn-cardapio {
                cursor: pointer;
                display: block;
                padding: 10px 5px;
                color: white;
                font-size: 1.2rem;
                position: relative;
                background-color: var(--cor_principal);
                border-radius: 3px;
                transition: 0.5s;
                text-align: center;
            }

            
            

            .ipnome input {
                border: 1px solid black;
                font-size: 15px;
                margin-left: 28px;
                margin-bottom: 10px;
            }

           

            .ippreco input{
                border: 1px solid black;
                font-size: 15px;
                margin-left: 29px;
                margin-bottom: 10px;
            }

            .ipdescricao input{
                border: 1px solid black;
                font-size: 15px;
                margin-bottom: 10px;
            }

            .imgproduto{
                margin-bottom: 10px;
            }
           

            .modal-body {
                width: 300px;
                margin-left: auto;
                margin-right: auto;
            }
            
            .btnmodal{
                cursor: pointer;
                display: block;  
                color: white;
                position: relative;
                background-color: var(--cor_principal);
                border-radius: 3px;
                transition: 0.5s;
                text-align: center;
                width: 100px;
                height: 25px;
            }
            
            .modal-footer{
                display: flex;
                justify-content: space-evenly;
            }

            .produtos-item a {
